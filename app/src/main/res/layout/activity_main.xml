<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/signup_animation"
    tools:context="com.example.jatinderkumar.spla.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20sp"
            android:paddingRight="25sp"
            android:paddingBottom="25sp"
            android:paddingLeft="25sp"
            android:id="@+id/llayout"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtIntentMainName"
                    android:fontFamily="sans-serif"
                    android:layout_width="318dp"
                    android:background="@drawable/border_textview"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_unihospital"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="25sp" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp">

                <ImageView
                    android:id="@+id/imgAppointment"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/appointment"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/imgConsultation"
                    android:layout_marginRight="50dp"/>

                <ImageView
                    android:id="@+id/imgConsultation"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/consultation"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="50dp"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgAppointment"
                    android:layout_marginLeft="67dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultation"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgConsultation"
                    app:layout_constraintLeft_toRightOf="@+id/textView5"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintHorizontal_bias="0.508"/>

                <ImageView
                    android:id="@+id/imgEmergency"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/emergency"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:id="@+id/imgQuery"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/query"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:layout_marginRight="50dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/imgEmergency"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintHorizontal_bias="1.0"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgEmergency"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="57dp"
                    android:layout_height="22dp"
                    android:text="Query"
                    android:layout_marginRight="50dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/textView7"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintHorizontal_bias="0.825"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgQuery"/>

                <ImageView
                    android:id="@+id/imgMedicine"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/medicine"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="57dp"
                    android:layout_height="22dp"
                    android:text="Medicine"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgMedicine"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="105dp"
                    android:layout_height="16dp"
                    android:text="@string/home_doctor"
                    app:layout_constraintLeft_toRightOf="@+id/textView7"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgHomeDoctor"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.514"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/imgHomeDoctor"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/fdoctor"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintLeft_toRightOf="@+id/imgMedicine"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.289"/>

        </android.support.constraint.ConstraintLayout>
        <android.support.design.widget.NavigationView
            app:headerLayout="@layout/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:itemTextColor="@color/darkgrey"
            app:itemIconTint="@color/darkgrey"
            app:menu="@menu/drawermenu"
            android:layout_gravity ="start">

        </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
